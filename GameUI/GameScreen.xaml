<Window x:Class="GameUI.GameScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameUI"
        mc:Ignorable="d"
        Title="MathQuest"
        Icon="Images/Icons/MathQuest.ico"
        Height="720" Width="1280" ResizeMode="NoResize">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" x:Name="First"></RowDefinition>
            <RowDefinition Height="1*" x:Name="Second"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid x:Name="GameGrid" Grid.Row="0" Background="Beige">
            
        </Grid>
        <Grid x:Name="OptionsGrid" Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="Images/OptionsGridImages/OptionsMenuPlaceholder.png"/>
            </Grid.Background>
        </Grid>
    </Grid>
</Window>
